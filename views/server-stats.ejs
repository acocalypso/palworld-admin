<!-- views/server-stats.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
  <title>Server Stats</title>
  <style>
    body {
      padding-top: 56px;
    }
  </style>
  <!-- Include Raphael library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.3.0/raphael.min.js"></script>
  <!-- Include JustGage library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/justgage/1.6.1/justgage.min.js"></script>
</head>
<body>
  <!-- Header Partial -->
  <%- include('partials/header') %>

  <!-- Main content -->
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-4">
        <h3>CPU Load</h3>
        <div id="cpuLoadGauge"></div>
      </div>
      <div class="col-md-4">
        <h3>Memory Free</h3>
        <div id="memoryGauge"></div>
      </div>
      <div class="col-md-4">
        <h3>Disk Space Free</h3>
        <div id="diskSpaceGauge"></div>
      </div>
    </div>
    <div class="col-md-12 text-center">
      <button id="refreshButton" class="btn btn-primary">Refresh</button>
      <span id="timer"></span>
    </div>
  </div>

  <!-- Include the new JavaScript file -->
  <script src="/scripts/server-stats.js"></script>

  <!-- Bootstrap JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
