<!-- views/serverControl.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="/scripts/serverControl.js" defer></script>
  <title>Server Control</title>
</head>
<body>
  <!-- Header Partial -->
  <%- include('partials/header') %>

  <!-- Main content -->
  <div class="container mt-4">
    <h1 class="text-center">Server Control</h1>

    <!-- Display running Docker containers -->
    <% if (containers.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Container ID</th>
            <th>Container Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% containers.forEach(container => { %>
            <tr>
              <td><%= container.id %></td>
              <td><%= container.name %></td>
              <td>
                <button class="btn btn-success" onclick="startContainer('<%= container.id %>')">Start</button>
                <button class="btn btn-danger" onclick="stopContainer('<%= container.id %>')">Stop</button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-center">No running containers</p>
    <% } %>
  </div>
  <!-- Bootstrap JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>